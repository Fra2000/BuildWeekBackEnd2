@model clinicaVeterinariaApp.Models.Veterinario.RicoveriViewModel

@{
    ViewData["Title"] = "Elimina Ricovero";
}

<h1>Elimina Ricovero</h1>

<h3>Sei sicuro di voler eliminare questo ricovero?</h3>
<div>
    <h4>Ricovero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tipologia
        </dt>
        <dd class="col-sm-10">
            @Model.Tipologia
        </dd>
        <dt class="col-sm-2">
            Data Inizio Ricovero
        </dt>
        <dd class="col-sm-10">
            @Model.Datainizioricovero.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Data Fine Ricovero
        </dt>
        <dd class="col-sm-10">
            @Model.DataFineRicovero.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Costo
        </dt>
        <dd class="col-sm-10">
            @Model.Costo
        </dd>
        <dt class="col-sm-2">
            Nome Animale
        </dt>
        <dd class="col-sm-10">
            @Model.NomeAnimale
        </dd>
        <dt class="col-sm-2">
            Microchip
        </dt>
        <dd class="col-sm-10">
            @if (Model.MicrochipBit)
            {
                @Model.MicrochipNumber
            }
            else
            {
                <span>Non ha il microchip</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="RicoveriID" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>
