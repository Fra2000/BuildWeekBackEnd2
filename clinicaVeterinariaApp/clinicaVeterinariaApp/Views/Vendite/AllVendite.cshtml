@model IEnumerable<clinicaVeterinariaApp.Models.Farmacia.Vendita>

    <div class="d-flex justify-content-between">
        <h3>Tutte le vendite</h3>
<form action="SearchBarVendite" method="get"  class="d-flex">
    <div class="d-flex me-2">
        <!-- L'input occupa due terzi della riga -->
        <input class="form-control" name="ricetta" type="search" placeholder="Cerca" aria-label="Cerca">
    </div>
    <div>
        <!-- Bottone con icona di ricerca -->
        <button class="btn btn-outline-primary" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85zm-5.81 1.065a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11z" />
            </svg>
        </button>
    </div>
</form>
</div>

        <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Codice Fiscale</th>
                <th>Prodotto</th>
                <th>Data di Vendita</th>
                <th>Stato di vendita</th>
                <th>Azioni effetuabili</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var i in Model) 
            {
                <tr>
                    <td>@i.VenditaID</td>
                    <td>@i.Cliente.Nome</td>
                    <td>@i.Cliente.CodiceFiscale</td>
                    <td>@i.Prodotto.Nome</td>
                    <td>@i.DataVendita</td>
                    <td>@i.StatoVendita</td>
                    <td>
                        <form asp-action="UpdateVendite"  class="btn ms-4">
                        <input type="hidden" name="venditaID" value="@i.VenditaID" />
                            <button class="btn btn-primary">
                                 <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                </svg>
                            </button>
                        </form>
                        <form asp-action="EliminaVendite" class="btn me-3">
                        <input type="hidden" name="IdVendite" value="@i.VenditaID" />
                        <button class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                            </svg>
                            </button>
                            </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<a href="@Url.Action("FormVendite")" class="btn btn-outline-primary">Aggiungi Vendita</a>
