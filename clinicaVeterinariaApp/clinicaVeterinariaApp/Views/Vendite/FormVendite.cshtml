@model clinicaVeterinariaApp.Models.Farmacia.Vendita

@{
    ViewData["Title"] = "FormVendite";
}

<h1>FormVendite</h1>

<h4>Vendita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SalvaVendite">
            <label asp-for="ClienteID">Che Cliente scegliere</label>
            <select asp-for="ClienteID" class="form-control">
                <option value="" disabled selected>Seleziona un'opzione...</option>
                @foreach (var cliente in ViewBag.clienti)
                {
                    <option value="@cliente.ClienteID">@cliente.Nome</option>
                }
            </select>
            <label asp-for="ProdottoID">Che Prodotto scegliere</label>
            <select asp-for="ProdottoID" class="form-control">
                <option value="" disabled selected>Seleziona un'opzione...</option>
                @foreach (var prodotto in ViewBag.prodotti)
                {
                    <option value="@prodotto.ProdottoID">@prodotto.Nome</option>
                }
            </select>
            <div class="form-group">
                <label asp-for="NumeroRicettaMedica" class="control-label"></label>
                <input asp-for="NumeroRicettaMedica" class="form-control" />
                <span asp-validation-for="NumeroRicettaMedica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantita" class="control-label"></label>
                <input asp-for="Quantita" class="form-control" />
                <span asp-validation-for="Quantita" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StatoVendita" /> @Html.DisplayNameFor(model => model.StatoVendita)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllVendite">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
