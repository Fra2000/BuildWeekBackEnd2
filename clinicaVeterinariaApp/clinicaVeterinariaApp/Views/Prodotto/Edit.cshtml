@model clinicaVeterinariaApp.Models.Farmacia.Prodotto

@{
    ViewData["Title"] = "Edit Prodotto";
}

<h1>Edit Prodotto</h1>

<h4>Prodotto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.ProdottoID" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoProdotto" class="control-label"></label>
                <input type="file" name="FotoProdotto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ElencoUsi" class="control-label"></label>
                <input asp-for="ElencoUsi" class="form-control" />
                <span asp-validation-for="ElencoUsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrezzoUnitario" class="control-label"></label>
                <input asp-for="PrezzoUnitario" class="form-control" />
                <span asp-validation-for="PrezzoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornitore.FornitoreId" class="control-label">Fornitore</label>
                <select asp-for="Fornitore.FornitoreId" asp-items="ViewBag.Fornitori" class="form-control"></select>
                <span asp-validation-for="Fornitore.FornitoreId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
