@model clinicaVeterinariaApp.Models.Farmacia.Prodotto

@{
    ViewData["Title"] = "Delete Prodotto";
}

<h1>Delete Prodotto</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>@Model.Nome</h4>
    <div>
        <p><strong>Price:</strong> @Model.PrezzoUnitario</p>
        <p><strong>Uses:</strong> @Model.ElencoUsi</p>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.ProdottoID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
