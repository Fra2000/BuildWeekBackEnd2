@model clinicaVeterinariaApp.Models.Veterinario.Animali

@{
    ViewData["Title"] = "Elimina Animale";
}

<h1>@ViewData["Title"]</h1>

<h3>Sei sicuro di voler eliminare l'animale "@Model.NomeAnimale"?</h3>

<form asp-action="EliminaAnimale" method="post">
    <input type="hidden" asp-for="AnimaleID" />

    <div class="form-group">
        <button class="btn btn-danger">Elimina</button>
        <a asp-action="ElencoAnimali" class="btn btn-secondary">Annulla</a>
    </div>
</form>
