@model clinicaVeterinariaApp.Models.Veterinario.Animali

@{
    ViewData["Title"] = "Modifica Animale";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ModificaAnimale" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="NomeAnimale" class="control-label"></label>
        <input asp-for="NomeAnimale" class="form-control" />
        <span asp-validation-for="NomeAnimale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipologia" class="control-label"></label>
        <input asp-for="Tipologia" class="form-control" />
        <span asp-validation-for="Tipologia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ColoreMantello" class="control-label"></label>
        <input asp-for="ColoreMantello" class="form-control" />
        <span asp-validation-for="ColoreMantello" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascita" class="control-label"></label>
        <input asp-for="DataNascita" class="form-control" type="date" />
        <span asp-validation-for="DataNascita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MicrochipBit" class="control-label"></label>
        <input asp-for="MicrochipBit" type="checkbox" />
        <span asp-validation-for="MicrochipBit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MicrochipNumber" class="control-label"></label>
        <input asp-for="MicrochipNumber" class="form-control" />
        <span asp-validation-for="MicrochipNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FotoAnimale" class="control-label">Foto Animale (opzionale)</label>
        <input type="file" name="FotoAnimale" class="form-control" />
        <span asp-validation-for="FotoAnimale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProprietarioID" class="control-label">Proprietario</label>
        <select asp-for="ProprietarioID" asp-items="ViewBag.Proprietari" class="form-control">
            <option value="">-- Seleziona Proprietario --</option>
        </select>
        <span asp-validation-for="ProprietarioID" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="AnimaleID" />

    <button class="btn btn-primary">Salva</button>
    <a asp-action="ElencoAnimali" class="btn btn-secondary">Annulla</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
