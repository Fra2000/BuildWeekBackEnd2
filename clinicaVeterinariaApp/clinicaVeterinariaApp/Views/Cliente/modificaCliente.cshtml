@model clinicaVeterinariaApp.Models.Farmacia.ClienteModel

@{
    ViewData["Title"] = "Modifica Cliente";
}

<h2>@ViewData["Title"]</h2>

<h4>Modifica Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="modificaCliente">
            <input type="hidden" asp-for="ClienteID" />
            <div class="form-group">
                @Html.AntiForgeryToken()

                <label asp-for="CodiceFiscale" class="control-label"></label>
                <input asp-for="CodiceFiscale" class="form-control" />
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indirizzo" class="control-label"></label>
                <input asp-for="Indirizzo" class="form-control" />
                <span asp-validation-for="Indirizzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="listaClienti">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
