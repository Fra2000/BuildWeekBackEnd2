@model IEnumerable<clinicaVeterinariaApp.Models.Farmacia.Medicinale>

<div class="container">
    <div>
        <h2 class="me-3">Tutte i Medicinali:</h2>
    </div>
     <div class="container mt-3">
        <div class="d-flex">
            <form action="SearchBarMedicinali" method="get" class="d-flex">
                <div class="d-flex me-2">
                    <!-- L'input occupa due terzi della riga -->
                    <input class="form-control" name="nome" type="search" placeholder="Cerca" aria-label="Cerca">
                </div>
                <div>
                    <!-- Bottone con icona di ricerca -->
                    <button class="btn btn-outline-primary mt-1" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85zm-5.81 1.065a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11z" />
                        </svg>
                    </button>
                </div>
            </form>
        
            <div class="ms-auto">
                <!-- Bottone Aggiungi posizionato a destra -->
                <form asp-action="CreateMedicinale" method="post">
                    <button class="btn btn-outline-primary">
                        Aggiungi
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg mb-1" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
     </div>
</div>

<div class="row mt-3">
    @foreach (var medicinale in Model)
    {
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <img src="@medicinale.Prodotto.FotoProdotto" class="card-img-top" alt="Immagine Medicinale">
            <div class="card-body">
                <h5 class="card-title">@medicinale.Prodotto.Nome</h5>
                <p class="card-text">@medicinale.Prodotto.ElencoUsi</p>
                <p class="card-text">Armadio: @medicinale.Cassetto.Armadio.CodiceUnivoco</p>
                <p class="card-text">Cassetto: @medicinale.Cassetto.NumeroCassetto</p>
            </div>
                <div class="d-flex justify-content-between p-2">
                <form action="EditMedicinale" method="post" class="m-2">
                    <input type="hidden" name="id" value="@medicinale.MedicinaleID" />
                    <button class="btn btn-outline-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                        </svg>
                    </button>
                </form>
                <form action="DeleteMedicinali" method="post" class="m-2">
                    <input type="hidden" name="id" value="@medicinale.MedicinaleID" />
                    <button class="btn btn-outline-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                            </svg>
                    </button>
                </form>
             </div>
        </div>
    </div>
}
    </div>
