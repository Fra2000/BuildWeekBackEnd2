@model clinicaVeterinariaApp.Models.Veterinario.CreateContabilizzazioneRicoveroViewModel

<h1>Crea Contabilizzazione Ricoveri</h1>

<h4>Contabilizzazione Ricoveri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ContabilizzazioneRicovero.RicoveroID" class="control-label">Ricovero</label>
                <select asp-for="ContabilizzazioneRicovero.RicoveroID" class="form-control">
                    @foreach (var ricovero in Model.RicoveriAttivi)
                    {
                        <option value="@ricovero.RicoveroID">@ricovero.NomeAnimale - @ricovero.Datainizioricovero.ToShortDateString()</option>
                    }
                </select>
                <span asp-validation-for="ContabilizzazioneRicovero.RicoveroID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContabilizzazioneRicovero.DataContabilizzazione" class="control-label"></label>
                <input asp-for="ContabilizzazioneRicovero.DataContabilizzazione" class="form-control" type="date" />
                <span asp-validation-for="ContabilizzazioneRicovero.DataContabilizzazione" class="text-danger"></span>
            </div>
            <!-- Campo Importo rimosso dalla vista, verrà calcolato automaticamente -->
            <div class="form-group">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Torna all'elenco</a>
</div>
