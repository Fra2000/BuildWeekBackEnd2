@model IEnumerable<clinicaVeterinariaApp.Models.Veterinario.Visite>

@{
    ViewData["Title"] = "Elenco delle Visite";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Animale ID</th>
            <th>Data della Visita</th>
            <th>Esame Obiettivo</th>
            <th>Descrizione Cura</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visita in Model)
        {
            <tr>
                <td>@visita.VisitaID</td>
                <td>@visita.AnimaleID</td>
                <td>@visita.DataVisita.ToShortDateString()</td>
                <td>@visita.EsameObiettivo</td>
                <td>@visita.DescrizioneCura</td>
                <td>
                    <form asp-action="Edit">
                        <input type="hidden" name="id" value="@visita.VisitaID" />
                        <button class="btn btn-primary">Modifica</button>
                    </form> 
                    <form asp-action="Delete">
                        <input type="hidden" name="id" value="@visita.VisitaID" />
                        <button class="btn btn-primary">Elimina</button>
                    </form>
                   
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Aggiungi Nuova Visita</a>
