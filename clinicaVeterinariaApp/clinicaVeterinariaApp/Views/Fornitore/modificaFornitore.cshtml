@model clinicaVeterinariaApp.Models.Farmacia.FornitoreModel

@{
    ViewData["Title"] = "Modifica Fornitore";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="modificaFornitore" method="post">
    <input type="hidden" asp-for="FornitoreId" />
    <div class="form-group">
        @Html.AntiForgeryToken()

        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Indirizzo" class="control-label"></label>
        <input asp-for="Indirizzo" class="form-control" />
        <span asp-validation-for="Indirizzo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recapito" class="control-label"></label>
        <input asp-for="Recapito" class="form-control" />
        <span asp-validation-for="Recapito" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salva" class="btn btn-outline-primary" />
    </div>
</form>

<div>
    <a asp-action="listaFornitori">Torna alla lista</a>
</div>
